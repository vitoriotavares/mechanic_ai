<div class="min-h-screen bg-gray-100 flex flex-col items-center py-10">
  <div class="bg-white shadow-md rounded-lg p-6 w-full max-w-lg">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Editar <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-yellow-600">
          Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
        <p class="text-sm text-gray-500 mb-2">(Deixe em branco se não deseja alterá-la)</p>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-500" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mt-2">
            Mínimo de <%= @minimum_password_length %> caracteres
          </p>
        <% end %>
      </div>

      <!-- Password Confirmation -->
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <!-- Current Password -->
      <div class="mb-4">
        <%= f.label :current_password, class: "block text-gray-700 font-medium mb-2" %>
        <p class="text-sm text-gray-500 mb-2">(Precisamos da sua senha atual para confirmar as alterações)</p>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Atualizar", class: "w-full bg-blue-600 text-white py-2 rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <!-- Cancel Account -->
    <div class="mt-6 bg-red-100 p-4 rounded-lg">
      <h3 class="text-lg font-bold text-red-600 mb-2">Cancelar minha conta</h3>
      <p class="text-sm text-red-700 mb-4">Insatisfeito? Você pode cancelar sua conta abaixo:</p>
      <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza?" }, method: :delete, class: "w-full bg-red-600 text-white py-2 rounded-lg shadow-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
    </div>

    <!-- Back Link -->
    <div class="mt-4">
      <%= link_to "Voltar", :back, class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
