<div class="min-h-screen bg-gray-100 flex flex-col items-center justify-center">
  <!-- Header -->
  <header class="text-center mb-10">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">MechanicAi</h1>
    <p class="text-lg text-gray-600">Encontre-me em <code class="bg-gray-200 px-2 py-1 rounded">app/views/pages/home.html.erb</code></p>
  </header>

  <!-- Main Content -->
  <main class="w-full max-w-md bg-white shadow-lg rounded-lg p-6">
    <% if current_user %>
      <!-- User Info -->
      <div class="text-center">
        <h2 class="text-2xl font-semibold text-gray-800">Bem-vindo, <%= current_user.name %>!</h2>
        <p class="text-gray-600 mt-2">Gerencie sua conta ou saia abaixo:</p>
      </div>

      <!-- User Actions -->
      <div class="mt-6 space-y-4">
        <%= link_to "Editar Conta", edit_user_registration_path, class: "block w-full bg-blue-600 text-white text-center py-2 rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        <%= button_to "Logout", destroy_user_session_path, data: { turbo: "false" }, method: :delete, class: "block w-full bg-red-600 text-white text-center py-2 rounded-lg shadow-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
      </div>
    <% else %>
      <!-- Guest Actions -->
      <div class="text-center">
        <p class="text-gray-600">Faça login ou crie uma conta para começar:</p>
      </div>
      <div class="mt-6 space-y-4">
        <%= link_to "Login", new_user_session_path, class: "block w-full bg-blue-600 text-white text-center py-2 rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        <%= link_to "Criar Conta", new_user_registration_path, class: "block w-full bg-green-600 text-white text-center py-2 rounded-lg shadow-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </main>

  <!-- Footer -->
  <footer class="mt-10 text-center text-sm text-gray-500">
    <p>&copy; <%= Time.now.year %> MechanicAi. Todos os direitos reservados.</p>
  </footer>
</div>
